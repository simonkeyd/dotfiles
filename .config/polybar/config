[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/top]
monitor = eDP-1
width = 100%
height = 27
border-size = 0
border-bottom-size = -5

background = ${colors.background}
foreground = ${colors.foreground}
override-redirect = false
line-color = ${colors.background}
line-size = 0

spacing = 0
padding-left = 5
padding-right = 5
module-margin = 3

font-0 = NotoSans-Regular:size=8;-1
font-1 = MaterialIcons:size=10;0
font-2 = Termsynu:size=8:antialias=false;-2
font-3 = DejaVuSansMono Nerd Font:size=8

modules-left = filesystem backlight volume
modules-center = date clock
modules-right = weather wireless-network wired-network wired-dock-network battery

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <bar>
format-prefix = "  "
bar-width = 10
bar-indicator = |
bar-indicator-font = 3
bar-indicator-foreground = ${colors.foreground}
bar-fill = ─
bar-fill-font = 3
bar-fill-foreground = ${colors.foreground}
bar-empty = ─
bar-empty-font = 3
bar-empty-foreground = ${colors.primary}

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 100
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.foreground}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.foreground}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10
bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
bar-capacity-fill = █
bar-capacity-fill-foreground = ${colors.foreground}
bar-capacity-fill-font = 3
bar-capacity-empty = █
bar-capacity-empty-font = 3
bar-capacity-empty-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/date]
type = internal/date
date =   %%{F#99}%Y-%m-%d%%{F-}
format = <date>
format-foreground = ${colors.foreground}
label-foreground = ${colors.foreground}

[module/clock]
type = internal/date
date =   %%{F#99}%H:%M%%{F-}
format = <date>
#format-foreground = ${colors.foreground}
#label-foreground = ${colors.foreground}

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-connected-foreground = ${colors.foreground}
label-disconnected =    not connected
label-disconnected-foreground = ${colors.foreground}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

animation-packetloss-0 = 
animation-packetloss-0-foreground = ${colors.foreground}
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${colors.foreground}
animation-packetloss-framerate = 500

[module/wired-network]
type = internal/network
interface = enp0s25
interval = 3.0

label-connected =    %{T3}%local_ip%%{T-}
label-disconnected-foreground = ${colors.foreground}

[module/wired-dock-network]
type = internal/network
interface = enp0s20u1u4i5
interval = 3.0

label-connected =    %{T3}%local_ip%%{T-}
label-disconnected-foreground = ${colors.foreground}

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
