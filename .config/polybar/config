ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
format-mounted = <label-mounted> 
label-mounted =   %free% free

[module/weather]
type = custom/script
exec = /usr/bin/python3 ~/.config/polybar/modules/openweathermap_detailed.py
click-left = /usr/bin/python3 ~/.config/polybar/modules/openweathermap_detailed.py
exec-if = ping openweathermap.org -c 1
interval = 300
label-font = 4

[module/test-spotify]
type = custom/script
exec = ~/.config/polybar/modules/get-spotify.sh
exec-if = pgrep -x spotify
;exec-if = ps -aux | grep /usr/bin/spotify | grep -v grep &>/dev/null && return 0 || return 1
interval = 1
